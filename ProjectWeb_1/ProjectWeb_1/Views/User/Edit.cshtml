@model ProjectWeb_1.Models.ViewModel.EditUsersViewModel
@{
    ViewBag.Title = "Editar Registro";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4 mt-4">
                <div class="card-body">
                    <h2 class="fw-bold text-primary mb-4 text-center">
                        <i class="bi bi-pencil-square me-2"></i>Editar Registro
                    </h2>

                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.HiddenFor(d => d.Id)

                        <div class="row g-3">
                            <!-- NOMBRE -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Nombre</label>
                                @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control", placeholder = "Nombre del usuario" })
                                @Html.ValidationMessage("Nombre", new { @class = "text-danger small" })
                            </div>

                            <!-- EMAIL -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Correo Electrónico</label>
                                @Html.TextBoxFor(d => d.Email, new { @class = "form-control", placeholder = "tucorreo@ejemplo.com" })
                                @Html.ValidationMessage("Email", new { @class = "text-danger small" })
                            </div>

                            <!-- CONTRASEÑA -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Nueva Contraseña</label>
                                @Html.PasswordFor(d => d.Contrasenna, new { @class = "form-control", placeholder = "********" })
                                @Html.ValidationMessage("Contrasenna", new { @class = "text-danger small" })
                            </div>

                            <!-- CONFIRMAR CONTRASEÑA -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Confirmar Contraseña</label>
                                @Html.PasswordFor(d => d.ConfirmarContrasenna, new { @class = "form-control", placeholder = "********" })
                                @Html.ValidationMessage("ConfirmarContrasenna", new { @class = "text-danger small" })
                            </div>

                            <!-- EDAD -->
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Edad</label>
                                @Html.TextBoxFor(d => d.Edad, new { @class = "form-control", placeholder = "Ej. 25" })
                                @Html.ValidationMessage("Edad", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-5 gap-3">
                            <button type="submit" class="btn btn-warning text-white px-4">
                                <i class="bi bi-arrow-repeat me-1"></i> Actualizar
                            </button>
                            <a href="@Url.Content("~/User/Query")" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

