
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <div class="card">
            <form action="/" method="post" id="frmAcceder">
                <div class="card-body">
                    <label name="name" class="form-label">Usuario</label>
                    <input type="text" name="username" value="" class="form-control" />

                    <br />

                    <label name="cont" class="form-label">Contraseña</label>
                    <input type="password" name="password" value="" class="form-control" />

                    <br />

                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function ()
        {

            $("#frmAcceder").submit(function (e)
            {
                e.preventDefault()
                url = "@Url.Content("~/Acceder/Enter")"
                parametros = $(this).serialize();
                console.log(parametros)

                $.post(url, parametros, function(data)
                {
                    if (data == "1")
                    {
                        document.location.href = "@Url.Content("~/")"
                    }
                    else
                    {
                        alert(data)
                    }
                })
            })

        })


    </script>
    }